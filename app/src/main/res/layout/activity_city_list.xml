<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".activity.CityListActivity">

    <EditText
        android:id="@+id/et_searchCity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="Search your City"
        android:background="@drawable/fieldtext_bg"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Search your City"
        android:textColorHint="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cityList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <ProgressBar
        android:id="@+id/pb_loadCity"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>